/* ===========================
   RESET Y CONFIGURACIÓN BASE
   =========================== */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background: #f0f2f5;
    padding: 20px;
}

/* ===========================
   LAYOUT PRINCIPAL
   =========================== */
.container {
    max-width: 1400px;
    margin: 0 auto;
}

h1 {
    color: #333;
    margin-bottom: 30px;
}

.grid {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 20px;
    margin-bottom: 20px;
}

/* ===========================
   TARJETAS
   =========================== */
.card {
    background: white;
    border-radius: 10px;
    padding: 20px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

/* ===========================
   PANEL ÚLTIMA LECTURA
   =========================== */
.ultima-lectura {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
}

.peso-display {
    font-size: 48px;
    font-weight: bold;
    margin: 20px 0;
}

.fecha-display {
    opacity: 0.9;
    font-size: 14px;
}

.usuario-display {
    opacity: 0.8;
    font-size: 16px;
    margin-top: 10px;
}

/* ===========================
   ESTADO DE CONEXIÓN
   =========================== */
.status {
    display: inline-block;
    padding: 5px 15px;
    border-radius: 20px;
    font-size: 12px;
    margin-top: 10px;
}

.status.conectado {
    background: #10b981;
    color: white;
}

.status.desconectado {
    background: #ef4444;
    color: white;
}

/* ===========================
   CHATBOT
   =========================== */
.chatbot {
    max-height: 600px;
    display: flex;
    flex-direction: column;
}

.chat-messages {
    flex: 1;
    overflow-y: auto;
    padding: 15px;
    background: #f9fafb;
    border-radius: 5px;
    margin-bottom: 15px;
    min-height: 400px;
}

.chat-message {
    margin: 10px 0;
    padding: 10px;
    border-radius: 8px;
}

.chat-message.user {
    background: #e0e7ff;
    text-align: right;
}

.chat-message.bot {
    background: #f3f4f6;
}

.chat-input-group {
    display: flex;
    gap: 10px;
}

.chat-input-group input {
    flex: 1;
    padding: 12px;
    border: 1px solid #ddd;
    border-radius: 5px;
    font-size: 14px;
}

.chat-input-group input:focus {
    outline: none;
    border-color: #667eea;
}

.chat-input-group button {
    padding: 12px 24px;
    background: #667eea;
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-weight: 600;
    transition: background 0.3s;
}

.chat-input-group button:hover {
    background: #5568d3;
}

.chat-input-group button:active {
    transform: scale(0.98);
}

/* ===========================
   GRÁFICA
   =========================== */
.chart-container {
    position: relative;
    height: 300px;
}

/* ===========================
   TABLA DE HISTORIAL
   =========================== */
table {
    width: 100%;
    border-collapse: collapse;
}

th,
td {
    padding: 12px;
    text-align: left;
    border-bottom: 1px solid #e5e7eb;
}

th {
    background: #f9fafb;
    font-weight: 600;
    color: #374151;
}

tbody tr:hover {
    background: #f9fafb;
}

.historial-table {
    max-height: 400px;
    overflow-y: auto;
}

/* ===========================
   SCROLLBAR PERSONALIZADO
   =========================== */
.chat-messages::-webkit-scrollbar,
.historial-table::-webkit-scrollbar {
    width: 8px;
}

.chat-messages::-webkit-scrollbar-track,
.historial-table::-webkit-scrollbar-track {
    background: #f1f1f1;
    border-radius: 4px;
}

.chat-messages::-webkit-scrollbar-thumb,
.historial-table::-webkit-scrollbar-thumb {
    background: #888;
    border-radius: 4px;
}

.chat-messages::-webkit-scrollbar-thumb:hover,
.historial-table::-webkit-scrollbar-thumb:hover {
    background: #555;
}

/* ===========================
   RESPONSIVE DESIGN
   =========================== */
@media (max-width: 1024px) {
    .grid {
        grid-template-columns: 1fr;
    }

    .chatbot {
        max-height: 500px;
    }
}

@media (max-width: 768px) {
    body {
        padding: 10px;
    }

    h1 {
        font-size: 24px;
    }

    .peso-display {
        font-size: 36px;
    }

    .card {
        padding: 15px;
    }

    th,
    td {
        padding: 8px;
        font-size: 14px;
    }
}

/* ===========================
   ANIMACIONES
   =========================== */
@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(10px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.chat-message {
    animation: fadeIn 0.3s ease;
}

/* ===========================
   MODALES
   =========================== */
.modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.6);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1000;
    animation: fadeIn 0.3s ease;
}

.modal-overlay.hidden {
    display: none;
}

.modal {
    background: white;
    border-radius: 15px;
    padding: 30px;
    max-width: 500px;
    width: 90%;
    max-height: 80vh;
    overflow-y: auto;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
    animation: slideUp 0.3s ease;
}

.modal-sugerencias {
    max-width: 700px;
}

.modal h2 {
    margin-bottom: 20px;
    color: #333;
    font-size: 24px;
}

.modal h3 {
    margin-top: 20px;
    margin-bottom: 10px;
    color: #667eea;
    font-size: 18px;
}

.modal-body {
    margin: 20px 0;
}

.peso-grande {
    font-size: 48px;
    font-weight: bold;
    color: #667eea;
    text-align: center;
    margin: 20px 0;
}

.form-group {
    margin-bottom: 20px;
}

.form-group label {
    display: block;
    margin-bottom: 8px;
    color: #374151;
    font-weight: 600;
}

.form-group input {
    width: 100%;
    padding: 12px;
    border: 2px solid #e5e7eb;
    border-radius: 8px;
    font-size: 16px;
    transition: border-color 0.3s;
}

.form-group input:focus {
    outline: none;
    border-color: #667eea;
}

.modal-buttons {
    display: flex;
    gap: 10px;
    justify-content: flex-end;
    margin-top: 20px;
}

.btn {
    padding: 12px 24px;
    border: none;
    border-radius: 8px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s;
}

.btn-primary {
    background: #667eea;
    color: white;
}

.btn-primary:hover {
    background: #5568d3;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
}

.btn-secondary {
    background: #e5e7eb;
    color: #374151;
}

.btn-secondary:hover {
    background: #d1d5db;
}

.btn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
}

.sugerencias-contenido {
    background: #f9fafb;
    padding: 20px;
    border-radius: 10px;
    margin: 15px 0;
    line-height: 1.6;
    white-space: pre-wrap;
}

.sugerencias-contenido h3 {
    color: #667eea;
    margin-top: 15px;
    margin-bottom: 10px;
}

.sugerencias-contenido ul {
    margin-left: 20px;
    margin-top: 10px;
}

.sugerencias-contenido li {
    margin-bottom: 8px;
}

.loading-spinner {
    display: inline-block;
    width: 20px;
    height: 20px;
    border: 3px solid #f3f4f6;
    border-top-color: #667eea;
    border-radius: 50%;
    animation: spin 1s linear infinite;
    margin-right: 10px;
    vertical-align: middle;
}

@keyframes slideUp {
    from {
        opacity: 0;
        transform: translateY(50px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes spin {
    to {
        transform: rotate(360deg);
    }
}

/* ===========================
   BOTONES DE TABLA
   =========================== */
.btn-ver-recomendacion {
    padding: 8px 16px;
    background: #667eea;
    color: white;
    border: none;
    border-radius: 6px;
    font-size: 13px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s;
}

.btn-ver-recomendacion:hover {
    background: #5568d3;
    transform: translateY(-1px);
    box-shadow: 0 2px 8px rgba(102, 126, 234, 0.4);
}

.btn-ver-recomendacion:active {
    transform: translateY(0);
}

/* ===========================
   AVATARES EMOJI
   =========================== */
.avatar-emoji {
    font-size: 80px;
    display: inline-block;
    animation: bounce 2s ease-in-out infinite;
}

.avatar-emoji-result {
    font-size: 60px;
    display: inline-block;
    animation: scaleIn 0.5s ease-out;
}

@keyframes bounce {
    0%, 100% {
        transform: translateY(0);
    }
    50% {
        transform: translateY(-20px);
    }
}

@keyframes scaleIn {
    from {
        transform: scale(0);
        opacity: 0;
    }
    to {
        transform: scale(1);
        opacity: 1;
    }
}

/* ===========================
   UTILIDADES
   =========================== */
.text-center {
    text-align: center;
}

.text-muted {
    color: #999;
}

.mt-20 {
    margin-top: 20px;
}

.loading {
    color: #999;
    font-style: italic;
}
